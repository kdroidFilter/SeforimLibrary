<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for INFO and above -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for all logs -->
    <appender name="FILE_ALL" class="ch.qos.logback.core.FileAppender">
        <file>build/sefaria-conversion-all.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- File appender for errors only -->
    <appender name="FILE_ERROR" class="ch.qos.logback.core.FileAppender">
        <file>build/sefaria-conversion-errors.log</file>
        <append>false</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- File appender for warnings and errors -->
    <appender name="FILE_WARN" class="ch.qos.logback.core.FileAppender">
        <file>build/sefaria-conversion-warnings.log</file>
        <append>false</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n%ex{full}</pattern>
        </encoder>
    </appender>

    <!-- Root logger -->
    <root level="DEBUG">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE_ALL" />
        <appender-ref ref="FILE_ERROR" />
        <appender-ref ref="FILE_WARN" />
    </root>

    <!-- Sefaria converter logger with debug level -->
    <logger name="io.github.kdroidfilter.seforimlibrary.generator.sefaria" level="DEBUG" />

    <!-- Reduce verbosity of some libraries -->
    <logger name="org.apache.lucene" level="WARN" />
    <logger name="app.cash.sqldelight" level="WARN" />
</configuration>
